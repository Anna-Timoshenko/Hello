<?xml version="1.0" encoding="UTF-8"?>
<resources>
  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowLightStatusBar">true</item>

  </style>

  <style name="NotCapsButton" parent="Widget.AppCompat.Button.Borderless.Colored">
    <item name="android:textAllCaps">false</item>
    <item name="android:textColor">#2c85e2</item>
    <item name="android:textSize">16sp</item>
    <item name="android:fontFamily">OpenSans-Semibold</item>
  </style>

  <style name="TextViewPrimary">
    <item name="android:textColor">#424242</item>
    <item name="android:fontFamily">OpenSans-Semibold</item>
    <item name="android:textStyle">bold</item>
  </style>

</resources>