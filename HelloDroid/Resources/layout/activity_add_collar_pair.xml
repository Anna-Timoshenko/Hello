<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:minWidth="25px"
	android:minHeight="25px"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/linearLayout1"
	android:paddingLeft="16dp"
	android:paddingRight="16dp"
	android:background="@android:color/white">

	<LinearLayout
		android:id="@+id/linearLayout1"
		android:orientation="horizontal"
		android:minWidth="25px"
		android:minHeight="55px"
		android:layout_width="match_parent"
		android:layout_height="55dp">

		<ImageButton
			android:id="@+id/imageButton1" 
			android:src="@drawable/ic_close1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@android:color/transparent"
			android:layout_gravity="center_vertical"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:text="Pair Collar With a Pet"
			android:textColor="#2b2b2b"
			android:layout_marginLeft="20dp"
			android:textSize="17sp"
			android:gravity="center_vertical"
			android:layout_weight="1"/>

		<Button
			android:id="@+id/button1"
			android:text="Done"
			android:layout_width="wrap_content"
            android:layout_height="match_parent"
			android:textColor="#2c85e2"
			android:minHeight="0dp"
			android:textSize="16sp"
			style="@style/Widget.AppCompat.Button.Borderless.Colored"
			android:fontFamily="OpenSans-Semibold"/>


	</LinearLayout>

	<TextView
		android:text="Please Choose Which Pet Should Use This Collar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/textView2"
		android:textColor="#424242"
		android:textSize="17sp"
		android:gravity="center"
		android:layout_marginLeft="28.5dp"
		android:layout_marginRight="27.5dp"
		android:layout_marginTop="20dp"
		android:fontFamily="OpenSans-Semibold"/>

	<Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Pet"
        android:layout_marginTop="21dp"
        android:drawableLeft="@drawable/ic_add1"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:gravity="left | center"
        android:textColor="#2c85e2"
        android:textSize="15sp"
		android:drawablePadding="8dp"
		android:fontFamily="OpenSans-Semibold"/>

    <androidx.recyclerview.widget.RecyclerView
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerView1" />

    


</LinearLayout>