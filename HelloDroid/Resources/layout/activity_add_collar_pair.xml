<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:minWidth="25px"
	android:minHeight="25px"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/linearLayout1"
	android:paddingLeft="16dp"
	android:paddingRight="16dp"
	android:background="@android:color/white">

	<LinearLayout
		android:orientation="horizontal"
		android:minWidth="25px"
		android:minHeight="55px"
		android:layout_width="match_parent"
		android:layout_height="55dp"
		android:id="@+id/linearLayout1">

		<ImageView
			android:src="@drawable/ic_close"
			android:layout_width="24dp"
			android:layout_height="24dp"
			android:id="@+id/imageView1"
			android:layout_marginTop="16dp"
			android:layout_weight="1"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:text="Pair Collar With a Pet"
			android:textColor="#2b2b2b"
			android:layout_marginLeft="20dp"
			android:textSize="17sp"
			android:layout_marginTop="16dp"
			android:layout_weight="4"/>

		<Button
			android:text="Done"
			android:layout_width="48dip"
            android:layout_height="wrap_content"
			android:id="@+id/button1"
			android:textColor="#2c85e2"
			android:textSize="16sp"
			android:layout_weight="1"
			style="@style/Widget.AppCompat.Button.Borderless.Colored"
			android:layout_gravity="center_vertical" />


	</LinearLayout>

	<TextView
		android:text="Please Choose Which Pet Should Use This Collar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/textView2"
		android:textColor="#424242"
		android:textSize="17sp"
		android:gravity="center"
		android:layout_marginLeft="28.5dp"
		android:layout_marginRight="27.5dp"
		android:layout_marginTop="20dp"/>

</LinearLayout>