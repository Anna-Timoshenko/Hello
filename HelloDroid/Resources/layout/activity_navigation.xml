<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_navigation_relativeLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <Button
        android:id="@+id/activity_navigation_button_hello"
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        style="@style/NotCapsButton"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/activity_navigation_button_add_collar"
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_navigation_button_hello"
        android:layout_centerHorizontal="true"
        style="@style/NotCapsButton"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/activity_navigation_button_dynamic_page"
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_navigation_button_add_collar"
        android:layout_centerHorizontal="true"
        style="@style/NotCapsButton"
        android:textSize="20sp"/>

</RelativeLayout>